# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Web Files
[*.{htm, html, css, sass, scss, less, svg}]
indent_size = 2

# javascripts Files
[*.{js, ts, tsx}]
indent_size = 2
